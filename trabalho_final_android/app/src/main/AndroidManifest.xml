<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="trabalhofinal.diego.nathan.otes06.udesc.trabalho_final_android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ListMoviesActivity"
            android:label="@string/title_activity_filmes" />
        <activity android:name=".activities.MovieInfoActivity" />
        <activity android:name=".activities.AddMovieActivity" />
        <activity android:name=".activities.ListDirectorsActivity" />
        <activity android:name=".activities.AddDirectorActivity" />
        <activity android:name=".activities.DirectorInfoActivity"></activity>
    </application>

</manifest>